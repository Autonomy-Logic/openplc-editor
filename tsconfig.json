{
  "compilerOptions": {
    "types": ["@testing-library/jest-dom", "node"],
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "configs/dll",
    "paths": {
      "~/*": ["./src/*"],
      "~main/*": ["./src/main/*"],
      "~renderer/*": ["./src/renderer/*"],
      "~features/*": ["./src/renderer/features/*"],
      "~providers/*": ["./src/renderer/providers/*"],
      "~contracts/*": ["./src/renderer/contracts/*"],
      "~utils/*": ["./src/utils/*"],
      "~shared/*": ["./src/shared/*"],
    }
  },
  "exclude": ["test", "release/build", "release/app/dist", "configs/dll"]
}
