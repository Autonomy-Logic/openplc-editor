{
  "compilerOptions": {
    "types": ["@testing-library/jest-dom", "node"],
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "configs/dll",
    "paths": {
      "@root/*": ["./src/*"],
      "@process:main/*": ["./src/main/*"],
      "@process:renderer/*": ["./src/renderer/*"],
      "@components/*": ["./src/renderer/components/*"],
      "@features/*": ["./src/renderer/features/*"],
      "@contracts/*": ["./src/renderer/contracts/*"],
      "@utils/*": ["./src/utils/*"],
      "@shared/*": ["./src/shared/*"],
      "@oplc-icons/*": ["./src/renderer/assets/icons/*"]
    }
  },
  "exclude": ["test", "release/build", "release/app/dist", "configs/dll"]
}
