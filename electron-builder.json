{
  "appId": "com.autonomylogic.openplceditor",
  "productName": "OpenPLC Editor",
  "asar": true,
  "asarUnpack": "**\\*.{node,dll}",
  "generateUpdatesFilesForAllChannels": true,
  "files": ["dist", "node_modules", "package.json"],
  "afterSign": "scripts/notarize.js",
  "directories": {
    "app": "release/app",
    "buildResources": "assets",
    "output": "release/build"
  },
  "extraResources": ["./assets/**"],
  "mac": {
    "extraResources": [
      {
        "from": "./resources/bin",
        "to": "./bin"
      },
      {
        "from": "./resources/sources",
        "to": "./sources"
      }
    ],
    "target": {
      "target": "default",
      "arch": ["arm64", "x64"]
    },
    "extendInfo": {
      "CFBundleDisplayName": "OpenPLC Editor",
      "CFBundleName": "OpenPLC Editor"
    },
    "type": "distribution",
    "hardenedRuntime": true,
    "entitlements": "assets/entitlements.mac.plist",
    "entitlementsInherit": "assets/entitlements.mac.plist",
    "gatekeeperAssess": false,
    "artifactName": "${productName}_${version}.${ext}"
  },
  "dmg": {
    "artifactName": "${productName}_${version}.${ext}",
    "title": "${productName}",
    "format": "UDRW",
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "win": {
    "extraResources": [
      {
        "from": "./resources/bin",
        "to": "./bin"
      },
      {
        "from": "./resources/sources",
        "to": "./sources"
      }
    ],
    "target": {
      "target": "default",
      "arch": ["x64"]
    },
    "artifactName": "${productName}_${version}.${ext}"
  },
  "linux": {
    "extraResources": [
      {
        "from": "./resources/bin",
        "to": "./bin"
      },
      {
        "from": "./resources/sources",
        "to": "./sources"
      }
    ],
    "target": ["AppImage"],
    "category": "Development"
  }
}
